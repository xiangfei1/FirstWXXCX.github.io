/* pages/index/index.wxss */
page {
  background: #7f54f3;
}

button {
  width: 250rpx;
  height: 80rpx;
  font-size: 28rpx;
  text-align: center;
}

.indexContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-top: 240rpx;
}

.userName {
  margin-top: 190rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.indexButton {
  margin-top: 120rpx;
  font-size: 25rpx;
  border: 2rpx solid blue;
  border-radius: 10rpx;
  padding: 20rpx 20rpx;
}